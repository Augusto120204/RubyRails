<html>
  <head>
    <title>Item Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .card {
            width: 100%;
            max-width: 40rem;
        }
    </style>
  </head>
  <body class="bg-dark text-white d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card text-white bg-secondary">
        <div class="card-header text-center">
            <h2>Item Details</h2>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item text-white bg-secondary"><h3><%= @item.name %></h3></li>
            <li class="list-group-item text-white bg-secondary"><%= @item.description %></li>
            <li class="list-group-item text-white bg-secondary"><span class="fw-bold text-warning">Quantity:</span> <%= @item.quantity %></li>
          </ul>
          <div class="text-center mt-3">
            <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-outline-info me-2' %>
            <%= link_to 'Back', items_path, class: 'btn btn-outline-light' %>
          </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
